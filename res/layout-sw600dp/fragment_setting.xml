<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filter By Age"
                    android:textColor="@color/gray_color_text"
                    android:textSize="@dimen/fragment_setting_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/year1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="20 Year Old"
                        android:textColor="@color/gray_color_text"
                        android:textSize="@dimen/fragment_setting_text_size" />

                    <TextView
                        android:id="@+id/year2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="50 Year Old"
                        android:textColor="@color/gray_color_text"
                        android:textSize="@dimen/fragment_setting_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/seekbar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_setting_top_margin"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filter By Radius"
                    android:textColor="@color/gray_color_text"
                    android:textSize="@dimen/fragment_setting_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/miles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="20 Year Old"
                        android:textColor="@color/gray_color_text"
                        android:textSize="@dimen/fragment_setting_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:progress="50"
                        android:progressDrawable="@drawable/apptheme_scrubber_progress_horizontal_holo_light"
                        android:thumb="@drawable/check" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutHorizontallist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_setting_top_margin"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Filter By Interest"
                    android:textColor="@color/gray_color_text"
                    android:textSize="@dimen/fragment_setting_text_size" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/backimage"
                        android:layout_width="@dimen/setting_arrow_hw"
                        android:layout_height="@dimen/setting_arrow_hw"
                        android:layout_marginTop="@dimen/setting_arrow_hw"
                        android:src="@drawable/left_aroow" />

                    <com.ps.horizontal_listview.HorizontalListView
                        android:id="@+id/interestList"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/fragment_setting_interest_list_h"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:layout_toLeftOf="@+id/nextimage"
                        android:layout_toRightOf="@+id/backimage" >
                    </com.ps.horizontal_listview.HorizontalListView>

                    <ImageView
                        android:id="@+id/nextimage"
                        android:layout_width="@dimen/setting_arrow_hw"
                        android:layout_height="@dimen/setting_arrow_hw"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/setting_arrow_hw"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutHorizontallist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_setting_top_margin"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Filter By Ethnicity"
                    android:textColor="@color/gray_color_text"
                    android:textSize="@dimen/fragment_setting_text_size" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/backimageethinicity"
                        android:layout_width="@dimen/setting_arrow_hw"
                        android:layout_height="@dimen/setting_arrow_hw"
                        android:layout_centerVertical="true"
                        android:src="@drawable/left_aroow" />

                    <com.ps.horizontal_listview.HorizontalListView
                        android:id="@+id/ethinicity"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/fragment_setting_ethinicity_list_h"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:layout_toLeftOf="@+id/nextimageethinicity"
                        android:layout_toRightOf="@+id/backimageethinicity" >
                    </com.ps.horizontal_listview.HorizontalListView>

                    <ImageView
                        android:id="@+id/nextimageethinicity"
                        android:layout_width="@dimen/setting_arrow_hw"
                        android:layout_height="@dimen/setting_arrow_hw"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/fragment_setting_top_margin"
                android:gravity="center|center_horizontal|clip_horizontal|left" >

                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="@dimen/notification_icon_h_w"
                    android:layout_height="@dimen/notification_icon_h_w"
                    />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Enable Notification"
                    android:textColor="@color/gray_color_text"
                    android:textSize="@dimen/fragment_setting_text_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/updateInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/offline"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/update_info" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Update Info"
                android:textColor="@color/gray_color_text"
                android:textSize="@dimen/fragment_setting_text_size_button" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/changePassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/offline"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/change_password" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Change Password"
                android:textColor="@color/gray_color_text"
                android:textSize="@dimen/fragment_setting_text_size_button" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deleteAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/offline"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/delete_account" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Delete Account"
                android:textColor="@color/gray_color_text"
                android:textSize="@dimen/fragment_setting_text_size_button" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>

</RelativeLayout>