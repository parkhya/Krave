<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/mainview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/linearLayout1"
                android:layout_below="@+id/layout2"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp" >

                <ImageView
                    android:id="@+id/viewpager1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/com_facebook_profile_picture_blank_square" >
                </ImageView>

                <ImageView
                    android:id="@+id/viewpagerStamp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/stamp"
                    android:visibility="gone" >
                </ImageView>

                <RelativeLayout
                    android:id="@+id/swipeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/home2_height"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/cancelSwipe"
                            android:layout_width="@dimen/home2_icon1_60"
                            android:layout_height="@dimen/home2_icon1_60"
                            android:src="@drawable/swipe_cross" />

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="220dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/arrow_w" />

                        <ImageView
                            android:id="@+id/doneSwipe"
                            android:layout_width="@dimen/home2_icon1_60"
                            android:layout_height="@dimen/home2_icon1_60"
                            android:src="@drawable/swipe_right" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:gravity="center|left"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                           android:layout_toLeftOf="@+id/imageOnOff"
                            android:text="Santosh | 90"
                            android:textColor="@color/black"
                            android:textSize="40sp" />

                        <ImageView
                            android:id="@+id/hideShowImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:src="@drawable/arrow_down"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imageOnOff"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:layout_toLeftOf="@+id/textOnOff" />

                        <TextView
                            android:id="@+id/textOnOff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="ONLINE"
                            android:textColor="@color/home2_3_text_color"
                            android:textSize="25sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/relationShip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:text="SINGLE"
                            android:textColor="@color/home2_3_text_color"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/milesAway"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="0.35"
                            android:gravity="right"
                            android:text="2025 miles"
                            android:textColor="@color/home2_3_text_color"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/whatareyou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="ASIAN"
                            android:textColor="@color/home2_3_text_color"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Address here, Newyork"
                            android:textColor="@color/home2_3_text_color"
                            android:textSize="25sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/hightWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="2 Friend in common"
                        android:textColor="@color/home2_3_text_color"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/aboutMe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:lines="2"
                        android:text="Hello Venkatesh,that was exactly what I&apos;m looking for. Thanks, Hello Venkatesh,that was exactly what I&apos;m looking for. Thanks"
                        android:textColor="@color/home2_3_text_color"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/sharedInterest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2sp"
                        android:layout_marginRight="2sp"
                        android:layout_marginTop="1sp"
                        android:paddingLeft="40dp"
                        android:text="SHARED INTERESTS"
                        android:textColor="@color/home2_3_text_color"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/home3_horizontal_listview_height"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" >

                        <ImageView
                            android:id="@+id/backimage"
                            android:layout_width="@dimen/home3_arrow_hw"
                            android:layout_height="@dimen/home3_arrow_hw"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:src="@drawable/left_aroow" />

                        <com.ps.horizontal_listview.HorizontalListView
                            android:id="@+id/horizontalListView1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/nimage"
                            android:layout_toRightOf="@+id/backimage" >
                        </com.ps.horizontal_listview.HorizontalListView>

                        <ImageView
                            android:id="@+id/nimage"
                            android:layout_width="@dimen/home3_arrow_hw"
                            android:layout_height="@dimen/home3_arrow_hw"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:src="@drawable/right_arrow" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home3_top_layout_height"
                android:layout_alignParentTop="true" >

                <ImageView
                    android:id="@+id/cancel"
                    android:layout_width="@dimen/home3_cross_icon_height_weight"
                    android:layout_height="@dimen/home3_cross_icon_height_weight"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:src="@drawable/btn_cross" />

                <!--
                     <View
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="#f2f2f2" />
                -->

                <ImageView
                    android:id="@+id/done"
                    android:layout_width="@dimen/home3_cross_icon_height_weight"
                    android:layout_height="@dimen/home3_cross_icon_height_weight"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="80dp"
                    android:src="@drawable/btn_tick" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>